<Window x:Class="JackSazerak.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JackSazerak.Editor"
        xmlns:viewmodels="clr-namespace:JackSazerak.Editor.ViewModels"
        mc:Ignorable="d"
        Style="{StaticResource MainWindow}"
        Title="Jack Sazerak Editor" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="New Level" />
                <MenuItem Header="Load Level" />
                <Separator />
                <MenuItem Header="Save Level" />
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ExitMenuCommand}" />
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>